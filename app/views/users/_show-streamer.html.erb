<!-- Présentation Streamer -->

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @user.username %></h1>
    <div class="d-flex">
      <%= image_tag "superman.jpg", class: "streamer-img"%>
        <% if @user.description.present? %>
          <p class="row align-self-center text-center ml-5"><%= @streamer.description %></p>
        <% end %>
    </div>
  </div>
</div>

<!-- Cards des Streams -->
<div class="container cards-streamer">
  <% @user.creeks.each do |creek| %>
    <div class="card-streamer">
    <%= cl_image_tag creek.photo.key, class: "stream-resa" %>
      <div class="card-body">
        <h5 class="card-title"><%= creek.title %></h5>
        <p class="card-text"><%= creek.scheduledStartTime.to_date.strftime('%A %d %b %Y %I:%M %p') %></p>
        <p class="card-text-description"><%= creek.description %></p>
      </div>
      <div class="card-right p-3">
        <p class="card-text"><strong><%= creek.price %>€</strong></p>
        <p class="card-text"><%= creek.capacity - creek.tickets.count %> places restantes</p>
        <%= link_to "Réserver", creek_path(creek), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<hr class="my-4">

<!-- Programmer un stream -->

<div class="container padding">
  <div class="row padding">
    <div class="col-lg-5">
      <h2>NEW CREEK</h2>
      <%= render "form-creek"%>
