<!-- Présentation Streamer -->

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @user.username %></h1>
    <div class="d-flex">
       <%= cl_image_tag @user.photo.key, class: "streamer-img" %>
        <% if @user.description.nil? %>
          <p>Une super description</p>
        <% else %>
          <p class="row align-self-center text-center ml-5"><%= @user.description %></p>
        <% end %>
    </div>
    <%= link_to edit_user_registration_path do  %>
      <i class="fas fa-user-cog float-right icon"></i>
    <% end %>
  </div>
</div>

<!-- Cards des Streams -->

<div class="container">
  <% if @user.creeks.count > 0 %>
    <h2>Futurs streams de <%= @user.username %></h2>
    <div class="cards-streamer">
      <% @user.creeks.each do |creek| %>
        <div class="card-streamer card-border">
        <%= cl_image_tag creek.photo.key, class: "stream-resa border-radius-left" %>
          <div class="card-body">
            <h5 class="card-title"><%= creek.title %></h5>
            <p class="card-text"><%= DateTime.iso8601(creek.scheduledStartTime).strftime('%A %d %b %Y %I:%M %p') %></p>
            <p class="card-text-description"><%= creek.description %></p>
          </div>
          <div class="card-right p-3">
            <p class="card-text"><strong><%= creek.price %>€</strong></p>
            <% if !creek.capacity.nil? %>
              <p class="card-text"><%= creek.capacity - creek.tickets.count %> places restantes</p>
            <% end %>
            <%= link_to "Réserver", creek_path(creek), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

 <!-- Programmer un stream -->

  <% if @user == current_user %>
    <%= render "users/my-bookings" %>
    <div class="padding">
      <div class="row padding">
        <div class="col-lg-5" id="form">
          <h2>Nouveau stream</h2>
          <%= render "users/form-creek"%>
        </div>
      </div>
    </div>
  </div>
    <hr class="my-4">

  <!-- A placer à la fin de la page (pub pour les streamers) -->
  <!-- Welcome Section -->

  <div class="container-fluid padding">
    <div class="row welcome text-center">
      <div class="col-12">
        <h1 class="display-4">Streamez facilement.</h1>
      </div>
      <hr>
      <div class="col-12">
        <p class="lead">Bienvenue sur Creeks, un lieu où vous pouvez streamer gratuitement, sans restriction et être payé pour ça !</p>
      </div>
    </div>
  </div>

  <!-- Three Column Section -->

  <div class="container-fluid padding">
    <div class="row text-center padding">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <i class="fab"></i>
        <%= image_tag "live.svg", class: "picto"%>
        <h3>LIVE</h3>
        <p>pour l'authenticité</p>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <i class="fab"></i>
        <%= image_tag "money.svg", class: "picto"%>
        <h3>STRIPE</h3>
        <p>pour être payé facilement</p>
      </div>
      <div class="col-sm-12 col-md-4">
        <i class="fab"></i>
        <%= image_tag "france.svg", class: "picto"%>
        <h3>FRENCH</h3>
        <p>parce qu'on sait coder</p>
      </div>
    </div>
    <hr class="my-4">
  </div>

  <!-- Two Column Section -->

  <div class="container padding">
    <div class="row padding align-items-center mb-5">
      <div class="col-lg-6">
        <h2>Si vous streamez</h2>
        <p><strong>Notre philosophie</strong></p>
        <p>Vous aider à promouvoir votre chaîne, faire découvrir vos créations, garantir un contenu de qualité.</p>
        <p>Nous sommes ravis de vous trouver sur notre plateforme et avons hâte de faire partager votre passion au plus grand nombre.</p>
        <br>
        <a class="btn btn-primary" href="#">En savoir plus</a>
      </div>
      <div class="col-lg-6">
        <%= image_tag "https://res.cloudinary.com/dvwipbafx/image/upload/v1593370293/person-taking-video-1654691_f1upgi.jpg", class: "promo"%>
      </div>
    </div>
  </div>
<% end %>



