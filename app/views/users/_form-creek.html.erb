<%= simple_form_for @creek do |f| %>
  <%= f.input :title, label: "Nom du Stream" %>
  <%= f.input :description, label: "Description (240 caractères)" %>
  <%= f.input :scheduledStartTime, as: :string, input_html: {:type => "datetime-local"}, label: "Date de début" %>
  <%= f.input :duration, as: :integer, input_html: { min: 10, step: 10 }, label: "Durée estimée (minutes)" %>
  <%= f.input :category, label: "Catégorie" %>
  <%= f.input :price, label: "Prix" %>
  <%= f.input :photo, as: :file %>
  <%= f.input :capacity, label: "Nombre de tickets" %>
  <%= f.button :submit, "Créer une nouvelle Creek", class:"btn btn-primary" %>
<% end %>
<br>
