<div class="fix-nf">
  <% if params[:streamers] = 1 %>
    <h1 class="text-center mt-5 mb-3">Tous nos streamers</h1>
  <% else %>
    <h1 class="text-center">Résultats pour "<%= params[:query] %>"</h1>
  <% end %>
  <% if @users&.count == 1 %>
    <div class="fix-nf">
      <div class="container">
        <div class="card-streamer card-border">
          <%= cl_image_tag @users.first.photo.key, class: "stream-resa border-radius-left" %>
          <div class="card-body">
            <h2><%= @users.first.username %></h2>
            <p><%= @users.first.description %></p>
            <%= link_to "Profil", user_path(@users.first), class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
      <% @users.first.creeks.each do |creek| %>
      <div class="container cards-streamer mt-3">
        <div class="card-streamer-index">
          <%= cl_image_tag creek.photo.key, class: "stream-resa"%>
          <div class="card-body">
            <h5 class="card-title"><%= creek.title %></h5>
            <p class="card-text"><%= DateTime.iso8601(creek.scheduledStartTime).strftime('%A %d %b %Y %I:%M %p') %></p>
            <p class="card-text-description"><%= creek.description %></p>
          </div>
          <div class="card-right p-3">
            <p class="card-text"><strong><%= creek.price %>€</strong></p>
            <% if !creek.capacity.nil? %>
            <p class="card-text"><%= creek.capacity - creek.tickets.count %> places restantes</p>
            <% end %>
            <%= link_to "Reserver", creek_path(creek), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% elsif @creeks&.count == 1%>
    <% @creeks.each do |creek| %>
    <div class="container cards-streamer mt-3">
      <div class="card-streamer-index">
        <%= cl_image_tag creek.photo.key, class: "stream-resa"%>
        <div class="card-body">
          <h5 class="card-title"><%= creek.title %></h5>
          <p class="card-text"><%= DateTime.iso8601(creek.scheduledStartTime).strftime('%A %d %b %Y %I:%M %p') %></p>
          <p class="card-text-description"><%= creek.description %></p>
        </div>
        <div class="card-right p-3">
          <p class="card-text"><strong><%= creek.price %>€</strong></p>
          <% if !creek.capacity.nil? %>
          <p class="card-text"><%= creek.capacity - creek.tickets.count %> places restantes</p>
          <% end %>
          <%= link_to "Réserver", creek_path(creek), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
    <% elsif @users&.count > 1 %>
    <div class="container">
      <% @users.each do |user| %>
      <%= render "shared/card-streamer", user: user %>
      <% end %>
    </div>
    <% else %>
    <div class="container text-center">
      <h3 class="mt-5">Nous n'avons pas trouvé ce que vous recherchez</h3>
      <iframe src="https://giphy.com/embed/g01ZnwAUvutuK8GIQn" width="480" height="270" frameBorder="0" class="giphy" allowFullScreen></iframe>
    </div>
  <% end %>
</div>




