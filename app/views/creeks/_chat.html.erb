<div class="d-flex flex-column mt-2 m-2">
  <div class="d-flex flex-column chat col-sm-6">
  <div id="messages" class="messages-ok" data-chatroom-id="<%= @creek.id %>">
    <div class="chat-title">
      <h2>Tchat en direct</h2>
    </div>

    <div class="messages">
      <% @creek.messages.each do |message| %>
        <% if message.user == current_user %>
          <div class="text-right yellow">
           <%= render "messages/messages", message: message %>
          </div>
        <% else %>
        <div class="text-left red">
          <%= render "messages/messages", message: message %>
        </div>
        <% end %>

      <% end %>
    </div>

  </div>
  </div>
    <div class="form-fullscreen col-sm-6">
      <%= simple_form_for [ @creek, @message ], remote: true, id: "form-fullscreen" do |f| %>
      <%= f.input :content, label: false, placeholder: "Message" %>
      <% end %>
    </div>
</div>
