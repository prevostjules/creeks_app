<div class="fix-nf registration-body">
  <div class="row">
    <div class="col-md-10">
      <div class="row bloc margin-div">
        <div class="register-left col-12 col-md-5">
          <%= cl_image_tag "https://res.cloudinary.com/domm9vey9/image/upload/v1593594083/noun_creek_white_vd6sio.svg" %>
          <h2 class="pt-4">Rejoignez-nous</h2>
          <p>Rejoignez notre communauté de streamers et intéragissez avec des passionnés dans le monde entier...</p>
          <%= link_to "A propos de nous", team_path, class: "btn btn-primary"%>
        </div>
        <div class="register-right col-12 col-md-7">
          <h2>Se connecter</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs col-12">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "mot de passe actuel" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions col-12">
                  <%= f.button :submit, "Se connecter", class: "btn btn-primary"%>
                </div>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
