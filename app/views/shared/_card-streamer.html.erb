<div class="card-streamer card-border position-relative">
  <div class="pl-3 d-flex flex-basis-160">
    <%= cl_image_tag user.photo.key, class: "avatar-large", crop: :fill, secure: true %>
  </div>
  <div class="card-body ">
    <div class="d-flex align-items-center">
      <h2><%= user.username %></h2>
      <span class="count pl-3"><%= user.creeks.count %> creeks</span>
    </div>
    <p class="pt-5"><%= user.description %></p>
  </div>
  <div class="d-flex w-25 align-items-end ">
    <%= link_to "Voir Profil", user_path(user), class: "link icon-profil" %>
  </div>
</div>
